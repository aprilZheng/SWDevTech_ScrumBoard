<UserControl x:Class="ScrumBoard.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScrumBoard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0 0 0 10">
        <Border Grid.Column="0" CornerRadius="10 10 0 10" BorderThickness="1" BorderBrush="Black">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="10*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock x:Name="GuiTitle" Grid.Row="0" Margin="10 0 0 0" VerticalAlignment="Center">Card Title</TextBlock>
                <TextBlock x:Name="GuiDescription" Grid.Row="1" Margin="10 10 0 0" TextWrapping="Wrap">Description</TextBlock>
                <Border Grid.Row="1" CornerRadius="20">
                    <Button Width="30" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="Transparent" BorderThickness="1" BorderBrush="Black" Margin="0 0 -1 -1" Click="editBtn_Click">E</Button>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
